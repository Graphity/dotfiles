#!/usr/bin/env python3

import json
from btu.classroom import Classroom
from pynotification import pynotifier


def main():
    with open('/home/graphity/.local/bin/.cfg/btu.json') as f:
        data = json.load(f)

    classroom = Classroom(data['user'], data['pass'])
    print(classroom.inbox)
    pynotifier(
        title='BTU Classroom',
        message=f'{classroom.inbox} unread messages'
    )


if __name__ == '__main__':
    main()
