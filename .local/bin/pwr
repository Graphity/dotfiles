#!/bin/bash

shutdown=""
reboot=""
suspend="⏾"
quit=""

options="$shutdown\n$reboot\n$suspend\n$quit"

chosen="$(echo -e "$options" | rofi -dmenu -theme powermenu)"

case $chosen in
    $shutdown) systemctl poweroff ;;
    $reboot) systemctl reboot ;;
    $suspend) systemctl suspend ;;
    $quit) pkill dwm ;;
esac
